<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.pkufenghao.goodweather">
   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="cn.edu.pku.fenghao.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="EasyWeather"
        android:roundIcon="@mipmap/login_app_96"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SelectCity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".RegActivity"></activity>
        <activity android:name=".GuideActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".WelcomeActivity"></activity>


    </application>

</manifest>
